@page
@model SilentAuction.Pages.Auctions.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Auction</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Auction.ID" />
            <div class="form-group">
                <label asp-for="Auction.OrganizationID" class="control-label"></label>
                <select asp-for="Auction.OrganizationID" class="form-control" asp-items="ViewBag.OrganizationID"></select>
                <span asp-validation-for="Auction.OrganizationID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Auction.AuctionName" class="control-label"></label>
                <input asp-for="Auction.AuctionName" class="form-control" />
                <span asp-validation-for="Auction.AuctionName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Auction.Location" class="control-label"></label>
                <input asp-for="Auction.Location" class="form-control" />
                <span asp-validation-for="Auction.Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Auction.Date" class="control-label"></label>
                <input asp-for="Auction.Date" class="form-control" />
                <span asp-validation-for="Auction.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
