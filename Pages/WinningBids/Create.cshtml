@page
@model SilentAuction.Pages.WinningBids.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>WinningBid</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="WinningBid.ItemID" class="control-label"></label>
                <select asp-for="WinningBid.ItemID" class ="form-control" asp-items="ViewBag.ItemID"></select>
            </div>
            <div class="form-group">
                <label asp-for="WinningBid.BidderID" class="control-label"></label>
                <select asp-for="WinningBid.BidderID" class ="form-control" asp-items="ViewBag.BidderID"></select>
            </div>
            <div class="form-group">
                <label asp-for="WinningBid.DonationSpecialistID" class="control-label"></label>
                <select asp-for="WinningBid.DonationSpecialistID" class ="form-control" asp-items="ViewBag.DonationSpecialistID"></select>
            </div>
            <div class="form-group">
                <label asp-for="WinningBid.Amount" class="control-label"></label>
                <input asp-for="WinningBid.Amount" class="form-control" />
                <span asp-validation-for="WinningBid.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WinningBid.BidStatus" class="control-label"></label>
                <select asp-for="WinningBid.BidStatus" class="form-control" asp-items="Html.GetEnumSelectList<Models.BidStatus>()"></select>
                <span asp-validation-for="WinningBid.BidStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
