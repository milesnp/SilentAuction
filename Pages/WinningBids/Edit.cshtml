@page
@model SilentAuction.Pages.WinningBids.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>WinningBid</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="WinningBid.ItemID" />
            <div class="form-group">
                <label asp-for="WinningBid.BidderID" class="control-label"></label>
                <select asp-for="WinningBid.BidderID" class="form-control" asp-items="ViewBag.BidderID"></select>
                <span asp-validation-for="WinningBid.BidderID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WinningBid.DonationSpecialistID" class="control-label"></label>
                <select asp-for="WinningBid.DonationSpecialistID" class="form-control" asp-items="ViewBag.DonationSpecialistID"></select>
                <span asp-validation-for="WinningBid.DonationSpecialistID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WinningBid.Amount" class="control-label"></label>
                <input asp-for="WinningBid.Amount" class="form-control" />
                <span asp-validation-for="WinningBid.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WinningBid.BidStatus" class="control-label"></label>
                <select asp-for="WinningBid.BidStatus" class="form-control" asp-items="Model.Status"></select>
                <span asp-validation-for="WinningBid.BidStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
